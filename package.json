{
  "name": "new-lifestream",
  "version": "1.0.0",
  "description": "Modern Node.js API for Strava fitness activity tracking and cycling analytics",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:deploy": "prisma migrate deploy",
    "retransform:all": "node scripts/retransform-activities.js all",
    "retransform:user": "node scripts/retransform-activities.js user",
    "bulksync:start": "node  --env-file=.env scripts/bulksync.js start",
    "bulksync:resume": "node scripts/bulksync.js resume",
    "bulksync:status": "node scripts/bulksync.js status",
    "bulksync:reset": "node scripts/bulksync.js reset",
    "bulksync:overview": "node scripts/bulksync.js overview",
    "cronjob:ingest": "node scripts/ingest-job.js",
    "cronjob:monitor": "node  --env-file=.env scripts/monitor-ingest-jobs.js",
    "setup:verify": "node  --env-file=.env scripts/verify-setup.js",
    "rate-limit:watch": "node  --env-file=.env scripts/rate-limit-monitor.js watch"
  },
  "keywords": [
    "strava",
    "api",
    "cycling",
    "fitness",
    "nodejs",
    "express",
    "prisma"
  ],
  "author": "Brandon Bohling",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.0.0",
    "express": "^5.2.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "vite": "^6.0.3",
    "vitest": "^3.0.2"
  }
}
